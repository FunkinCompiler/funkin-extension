{
	"name": "hellohaxe",
	"publisher": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.4.0"
	},
	"activationEvents": [
		"workspaceContains:./funk.cfg"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mikolka9144/funkin-extension.git"
	},
	"files": [
		"bin",
		"node_modules",
		"LICENSE.md",
		"README.md"
	],
	"main": "bin/main.js",
	"contributes": {

		"commands": [
			{
				"command": "hellohaxe.sayHello",
				"title": "Say Hello"
			},
			{
				"command": "mikolka.setup",
				"title": "Funk: Configure compiler"
			},
			{
				"command": "mikolka.new",
				"title": "Funk: Make new project"
			},
			{
				"command": "mikolka.just-run",
				"title": "Funk: Just run"
			},
			{
				"command": "mikolka.just-compile",
				"title": "Funk: Just compile"
			},
			{
				"command": "mikolka.run",
				"title": "Funk: Compile and Run"
			},
			{
				"command": "mikolka.export",
				"title": "Funk: Export current mod"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "haxelib.json",
				"url": "http://json.schemastore.org/haxelib"
			},
			{
				"fileMatch": "hxformat.json",
				"url": "./schemas/hxformat.schema.json"
			}
		],
		"taskDefinitions": [
						{
				"type": "funk",
				"required": [
					"modName",
					"gamePath"
				],
				"properties": {
					"modName": {
						"type": "string",
						"description": "THe name to use for the mod. If you have the mod with the same name, this task will override it!",
						"default":"workbench"
					},	
					"gamePath": {
						"type": "string",
						"description": "THe path to your game. Only relative paths are supported for now."
					}
				}
			}
		],
		"debuggers": [
			{
				"type": "run-game",
				"label": "Run the Funkin copy",
				"program": "./bin/funkin-runner.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"properties": {
							"cwd": {
								"type": "string",
								"description": "Path to the current working directory. If not specified, the workspace directory is used."
							},
							"cmd_prefix": {
								"type": "string",
								"description": "Prefix to use in the command"
							},
							"execName": {
								"type": "string",
								"description": "Name of the executable"
							},
							"args": {
								"type": "array",
								"description": "The Haxe command-line arguments. If not specified, the selected Haxe configuration is used.",
								"items": {
									"type": "string"
								}
							},
							"trace": {
								"type": "boolean",
								"description": "Traces some other output",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"name": "Funkin game",
						"type": "run-game",
						"request": "launch"
					}
				]
			}
		]
	},
	"dependencies": {
		"vscode-debugadapter": "^1.51.0"
	}
}
