{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "debugWebWorkerHost": true,
      "autoAttachChildProcesses": true,
      "trace": true,
      "debugWebviews": true,
      "preLaunchTask": "hxml: extension.hxml",

      "outFiles": ["${workspaceFolder}/*.js"]
    },
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "stopOnEntry": false,
      "sourceMaps": true,
      "autoAttachChildProcesses": true,
      "preLaunchTask": "hxml: extension.hxml",

      "outFiles": ["${workspaceFolder}/*.js"]
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Compile mod",
      "command": "vsce package",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "hxml: extension.hxml"
    }
  ]
}
